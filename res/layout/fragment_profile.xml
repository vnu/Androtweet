    <View
        android:id="@+id/hrSettings"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/llCountStatus"
        android:background="@color/lt_grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hrSettings" >

        <fragment
            android:id="@+id/fragUserLine"
            android:name="com.vnu.androtweet.activities.fragments.UserlineFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_tweetline" />
